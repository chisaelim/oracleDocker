# Security rules for uploads directory
Options -Indexes
Options -ExecCGI

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Deny all other file types
<FilesMatch "^.*\.([^.]+)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Specifically deny dangerous file types
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order deny,allow
    Deny from all
</FilesMatch>